{
  "name" : "singlehost",
  "run_list": <%= run_list.to_json %>,
  "ruby": { "version": "1.9.2-p180",
    "path": "<%= deployment_home %>/deploy/rubies/ruby-<%= @ruby_version %>",
    "user": "<%= deployment_user %>",
    "group": "<%= deployment_group %>" },
  "ruby18": { "version": "1.8.7-p334",
    "path": "<%= deployment_home %>/deploy/rubies/ruby-<%= @ruby18_version %>" },
  "rubygems": { "version": "1.5.2",
    "bundler": { "version": "1.0.10" },
    "rake": { "version": "0.8.7" } },
  "mongodb": { "version": "1.8.1",
    "path": "<%= deployment_home %>/deploy/mongodb",
    "user": "<%= deployment_user %>",
    "group": "<%= deployment_group %>" },
  "redis": { "version": "2.2.4",
    "path": "<%= deployment_home %>/deploy/redis",
    "runner": "<%= deployment_user %>" },
  "nodejs": { "version": "0.4.8",
    "path": "<%= deployment_home %>/deploy/nodejs",
    "user": "<%= deployment_user %>",
    "group": "<%= deployment_group %>" },
  "nginx": { "vcap_log": "<%= deployment_home %>/sys/log/vcap.access.log" },
  "mysql" : { "server_debian_password" : "root",
    "server_root_password": "root",
    "server_repl_password": "root",
    "bind_address": "127.0.0.1"},
  "postgresql" : { "server_password" : "root"},
  "erlang": { "version": "R14B02", 
              "path": "<%= deployment_home %>/deploy/erlang",
              "user" : "<%= deployment_user %>",
              "group" : "<%= deployment_group %>"}, 
  "cloudfoundry": { "revision": "HEAD",
    "path": "<%= deployment_home %>/vcap",
    "user": "<%= deployment_user %>"}
}
