---
local_db: sqlite3:/var/vcap/services/postgresql/postgresql_node.db
base_dir: /var/vcap/services/postgresql/
index: <%= node[:postgresql][:index] %>
mbus: nats://<%= node[:nats_server][:user] %>:<%= node[:nats_server][:password] %>@<%= node[:nats_server][:host] %>:<%= node[:nats_server][:port] %>/
log_level: DEBUG
pid: /var/vcap/sys/run/postgresql_node.pid
available_storage: <%= node[:service][:postgresql][:available_storage] %>
node_id: <%= "postgresql_node_#{node[:postgresql][:index]}" %>
max_db_size: <%= node[:service][:postgresql][:max_db_size] %>
max_long_query: 3
max_long_tx: 30
postgresql:
  host: <%= node[:service][:postgresql][:host] %>
  port: 5432
  user: <%= node[:service][:postgresql][:server_root_user] %>
  pass: <%= node[:service][:postgresql][:server_root_password] %>
  database: <%= node[:service][:postgresql][:database] %>
