---
local_route: <%= node[:health_manager][:local_route] %>
mbus: nats://<%= node[:nats][:user] %>:<%= node[:nats][:password] %>@<%= node[:nats][:host] %>:<%= node[:nats][:port] %>/
logging:
  level: debug
pid: /var/vcap/sys/run/healthmanager.pid
rails_environment: production
database_environment: # replaces database.yml
  production:
    database: <%= node[:ccdb][:database] %>
    host: <%= node[:ccdb][:host] %>
    port: <%= node[:ccdb][:port] %>
    encoding: utf8
    username: <%= node[:ccdb][:user] %>
    password: <%= node[:ccdb][:password] %>
    adapter: postgresql
    timeout: 2000
    template: template0 # Required for utf8 encoding
intervals:
  database_scan:        60
  droplet_lost:         30
  droplets_analysis:    10
  flapping_death:        3
  flapping_timeout:    180
  restart_timeout:      20
  stable_state:         60
