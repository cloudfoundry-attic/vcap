---
capacity: <%= node[:couchdb_node][:capacity] %>
plan: free
local_db: sqlite3:/var/vcap/services/couchdb/couchdb_node.db
mbus: nats://<%= node[:nats_server][:user] %>:<%= node[:nats_server][:password] %>@<%= node[:nats_server][:host] %>:<%= node[:nats_server][:port] %>/
index: <%= node[:couchdb_node][:index] %>
base_dir: /var/vcap/services/couchdb/instances
couchdb_log_dir: /var/vcap/services/couchdb/logs
plan: free
pid: /var/vcap/sys/run/couchdb_node.pid
node_id: <%= "couchdb_node_#{node[:couchdb_node][:index]}" %>
supported_versions: <%= "['#{node[:couchdb][:supported_versions].keys.join("', '")}']"%>
default_version: "<%= node[:couchdb][:default_version] %>"
op_time_limit: <%= node[:couchdb_node][:op_time_limit] %>
couchdb_install_path: <%= node[:couchdb][:path] %>
logging:
  level: debug
couchdb:
  host: <%= node[:couchdb][:host] %>
  port: <%= node[:couchdb][:port] %>
  admin: <%= node[:couchdb][:username] %>
  adminpass: <%= node[:couchdb][:password] %>
