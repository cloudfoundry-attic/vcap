for n in `seq 1 100`; do
  if [ -f /tmp/vcap_chown.out ]; then
    break
  fi
  sleep 0.1
done

[ -z $1 ] && version=<%= node[:redis][:default_version] %> || version=$1
exec start-stop-daemon --start --quiet --chuid vcap --exec  <%= node[:redis][:path_in_warden] %>/redis-${version}/bin/redis-server /store/instance/redis.conf
