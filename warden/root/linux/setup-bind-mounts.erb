#!/bin/bash

set -o nounset
set -o errexit

<% for source_path, dest_info in params["bind_mounts"] %>
mkdir -p <%= dest_info["path"] %>
mount --bind <%= source_path %> <%= dest_info["path"] %>
<% if dest_info["mode"] %>
mount -o remount,<%= dest_info["mode"] %> <%= dest_info["path"] %>
<% end %>
<% end %>